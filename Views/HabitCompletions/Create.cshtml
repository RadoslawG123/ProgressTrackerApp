@model ProgressTrackerApp.Models.HabitCompletion

@{
    ViewData["Title"] = "Create HabitCompletion";
}

CHECKING ERRORS
@if (!ViewData.ModelState.IsValid)
{
    <div style="border: 1px solid red; padding: 10px;">
        <h3>Błędy walidacji:</h3>
        <ul>
            @foreach (var state in ViewData.ModelState)
            {
                if (state.Value.Errors.Count > 0)
                {
                    <li>
                        <strong>@state.Key:</strong>
                        @foreach (var error in state.Value.Errors)
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </li>
                }
            }
        </ul>
    </div>
}

<h2>Create HabitCompletion</h2>
<a asp-action="Create" asp-controller="Habits">Create New Habit</a>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="HabitId" class="control-label"></label>
        <select asp-for="HabitId" class="form-control" asp-items="ViewBag.HabitId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" value="@ViewData["HabitDate"]" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
