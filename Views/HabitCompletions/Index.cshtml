@model IEnumerable<ProgressTrackerApp.Models.HabitCompletion>
@{
    ViewData["Title"] = "Index";
}

<h2>Habit Completions</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Habit</th>
            <th>User</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Habit?.Name</td>
                <td>@item.UserId</td>
                <td>@item.Date</td>
            </tr>
        }
    </tbody>
</table>